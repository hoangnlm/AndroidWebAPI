<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="vn.t3h.androidwebapi.MainActivity" android:gravity="center_horizontal">

    <EditText
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/etName" android:hint="Username" android:textAlignment="center" android:layout_marginTop="100dp"/>
    <EditText
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/etPass" android:hint="Password" android:textAlignment="center"/>
    <Button
        android:text="Login"
        android:layout_gravity="center_horizontal"
        android:layout_width="150dp"
        android:layout_height="wrap_content" tools:layout_editor_absoluteX="139dp" tools:layout_editor_absoluteY="255dp" android:id="@+id/btLogin" android:textAlignment="center" android:layout_marginTop="10dp"/>

</LinearLayout>
